<div class="container">
  <div class="row text-center">
    <div class="card col-sm-6 py-3 offset-3">
      <div class="card-header"><h4><%= @post.title %></h4></div>
        <div class="card-body">
          
          <!--画像 -->
          <% if @post.img? %>
            <%= image_tag @post.img.url %>
          <% else %>
            <%= image_tag "noimg.jpg" %>
          <% end %>
          <!-- 画像 ここまで -->
          
            <div class="card-text">
                <p class="bg-info text-light mt-3">コメント</p>
                <p class="mb-5"><%= @post.content_1 %></p>
            </div>
         </div> <!--card body -->
         
          <!-- お気に入りボタン -->
          <p>いいね件数: <%= @count_likes %></p>
          <% if current_user.likeing?(@post) %>
            <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
              <% else %>
            <%= button_to 'いいね', post_likes_path(@post) %>
          <% end %>
          <!-- お気に入りボタンここまで -->
          
          <% if current_user == @post.user() %>
           <%= link_to "この投稿を編集する" , edit_post_path(@post) %>
           <%= link_to "この投稿を削除する" , @post, method: :delete, data:{ confirm: "本当によろしいですか？"} %>
           <% end %>
    </div> <!--col -->

  </div><!-- row -->
</div> <!-- container -->
