<div class="container">
  <div class="row text-center">
    <div class="card col-sm-6 offset-3">
      <div class="card-header"><h4><%= @post.title %></h4></div>
        <div class="card-body">
                <%= image_tag @post.img.url %>
            <div class="card-text">
              <p> </p>
                <p class="bg-info text-light">ここがおすすめ！</p>
                <p><%= @post.content_1 %></p>
                <!--<p><= @post.content_2 %></p>-->
                <!--<p><= @post.content_3 %></p>-->
            </div>
        </div>
                <%= link_to "この投稿を編集する" , edit_post_path(@post) %>
                <%= link_to "この投稿を削除する" , @post, method: :delete, data:{ confirm: "本当によろしいですか？"} %>

    </div> <!--col -->

  </div><!-- row -->
</div> <!-- container -->
