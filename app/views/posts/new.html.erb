<div class="text-center">
  <h1>新規投稿</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

     <%= form_with(model: @post, local: true) do |f| %>
      <%= render "layouts/error_messages", model: @post %>
      
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content_1, "コメント" %>
        <%= f.text_field :content_1, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :img, "画像" %>
        <%= f.file_field :img, class: "image" %>
      </div>
      
      <%= f.submit '新規投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>