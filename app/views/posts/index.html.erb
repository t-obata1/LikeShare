
<div class="container">
  
  <div class="container row col-md-12"> <!-- バナー -->
     <%= image_tag "banner.png" %>
  </div>
  
  <div class="jumbotron text-secondary"  style="background: url(<%= asset_path "jumbotron.jpg" %>)center; background-size:cover;">
    <h1>あなたのおススメをシェアしよう</h1>
    <p>ハマっているコンテンツ<br>
    おススメしたい本<br>
    好きな写真<br>
    なんでもOK!
    </p>
  </div>
  

  <div class="row text-center">

    <% @posts.each do |post| %>
      <div class ="card col-md-4 py-3">
        <h5 class="card-header">
          <%= link_to post.title, post_path(post) %>
        </h5>
        <div class="card-body">
          <% if post.img? %>
            <%= image_tag post.img.url %>
          <% else %>
            <%= image_tag "noimg.jpg" %>
          <% end %>
          <!--<p><#%= post.content_1 %></p>-->
          <p class="pt-3">投稿者:<%= link_to post.user.name, user_path(post.user.id) %></p>
          <p><%= post.created_at %></p>
        </div>
      </div> <!--card -->
    <% end %>   
      
  </div> <!-- row -->
</div> <!-- container -->


